{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2020
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "env": {
    "node": true,
    "es6": true
  },
  "overrides": [
    {
      "files": ["test/**/*"],
      "env": {
        "mocha": true
      },
      "parserOptions": {
        "sourceType": "script",
        "ecmaVersion": 2020
      }
    },
    {
      "files": ["bin/**/*"],
      "parserOptions": {
        "sourceType": "script",
        "ecmaVersion": 2020
      }
    }
  ],
  "rules": {
    "no-extra-parens": [
      "error",
      "functions"
    ],
    "no-inner-declarations": 0,
    "consistent-return": 0,
    "no-eq-null": "error",
    "no-floating-decimal": "error",
    "no-self-compare": "error",
    "no-throw-literal": "error",
    "no-trailing-spaces": "error",
    "no-void": "error",
    "wrap-iife": [
      "error",
      "outside"
    ],
    "strict": [
      "error",
      "global"
    ],
    "no-use-before-define": [
      "error",
      "nofunc"
    ],
    "generator-star-spacing": [
      "error",
      "after"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "no-underscore-dangle": "off",
    "no-constant-condition": "off",
    "camelcase": [
      "error",
      {
        "properties": "never"
      }
    ],
    "keyword-spacing": "error",
    "indent": [
      "error",
      2
    ],
    "no-empty": "error",
    "@typescript-eslint/no-extra-semi": "error",
    "curly": [
      "error",
      "multi-line"
    ],
    "array-bracket-spacing": [
      "error",
      "never"
    ],
    "brace-style": [
      "error",
      "1tbs",
      {
        "allowSingleLine": true
      }
    ],
    "@typescript-eslint/semi": [
      "error",
      "always"
    ],
    "no-var": "error",
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "error"
  }
}
